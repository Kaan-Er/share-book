<h1>Profile</h1>
<br>
<h3 class="alert alert-primary">Username: <%= @user.username %></h3>
<h3 class="alert alert-primary">Email: <%= @user.email%></h3>
<h2 class="alert alert-success">Books</h2>
<hr>

<table class="table table-striped">
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Action</th>
  </tr>

  <% @books.each do |book| %>
    <tr>
      <% if book.status? %>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= link_to 'Show', book_path(book), class:"btn btn-info text-white"  %></td>
      <%end%>
    </tr>
  <% end %>
</table>